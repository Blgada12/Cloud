<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cf000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:id="@+id/viewpicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewname"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="곡 이름"
                    android:background="#fff"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/viewetc"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="5dp"
                    android:text="곡 설명"
                    android:background="#fff"
                    android:textColor="#000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/easystart"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:textSize="15sp"
                        android:background="#6eca4c"
                        android:gravity="center"
                        android:textColor="#000"
                        android:text="E"/>

                    <TextView
                        android:id="@+id/normalstart"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:background="#ffee00"
                        android:gravity="center"
                        android:textColor="#000"
                        android:text="N"/>

                    <TextView
                        android:id="@+id/hardstart"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:background="#c42b30"
                        android:gravity="center"
                        android:textColor="#000"
                        android:text="H"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/songstart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Start!!"
            android:onClick="onclick"/>

    </LinearLayout>

    <ListView
        android:id="@+id/mainsongs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="#000"
        android:dividerHeight="1.5dp"/>

</LinearLayout>